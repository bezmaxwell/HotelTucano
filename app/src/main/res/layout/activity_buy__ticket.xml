<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="ticket_binding"
            type="com.example.hoteltucano.view.uiSec.Buy_Ticket" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.uiSec.Buy_Ticket"
    android:background="@drawable/background_login_hotel_tucano">

    <TextView
        android:id="@+id/ticket_bought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="10dp"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:text="Comprado com sucesso !!!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/field_complete_ticket_buy"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="#21E178"
        android:elevation="10dp"
        android:shadowColor="@color/colorAccent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticket_bought" />


    <TextView
        android:id="@+id/parabens_buy_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ParabÃ©ns!!! "
        android:elevation="10dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="@+id/field_complete_ticket_buy"
        app:layout_constraintRight_toRightOf="@+id/field_complete_ticket_buy"
        app:layout_constraintTop_toTopOf="@+id/field_complete_ticket_buy" />

    <TextView
        android:id="@+id/txt_checkout_buy_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Trip!!! "
        android:textAllCaps="true"
        android:elevation="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginBottom="20sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="@+id/field_complete_ticket_buy"
        app:layout_constraintBottom_toTopOf="@+id/check_in_buy_ticket" />

<ImageView
    android:id="@+id/image_buy_ticket"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginTop="40dp"
    android:elevation="10dp"
    android:background="@drawable/ic_baseline_flight_takeoff_24"
    app:layout_constraintRight_toRightOf="@id/field_complete_ticket_buy"
    app:layout_constraintLeft_toLeftOf="@+id/field_complete_ticket_buy"
    app:layout_constraintTop_toBottomOf="@+id/parabens_buy_ticket"/>

    <TextView
        android:id="@+id/txt_check_out_buy_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Out"
        android:textAllCaps="true"
        android:elevation="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginBottom="20sp"
        android:textStyle="italic"
        app:layout_constraintRight_toRightOf="@+id/field_complete_ticket_buy"
        app:layout_constraintBottom_toTopOf="@+id/check_out_buy_ticket" />


    <TextView
        android:id="@+id/check_in_buy_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!!! "
        android:elevation="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/field_complete_ticket_buy"
        app:layout_constraintBottom_toBottomOf="@+id/field_complete_ticket_buy" />


    <TextView
        android:id="@+id/check_out_buy_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!!! "
        android:elevation="10dp"
        android:layout_marginRight="50dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/field_complete_ticket_buy"
        app:layout_constraintBottom_toBottomOf="@+id/field_complete_ticket_buy" />


    <Button
            android:id="@+id/btn_buy_ticket"
            app:layout_constraintTop_toBottomOf="@+id/field_complete_ticket_buy"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#22BA67"
            android:elevation="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:text="Voltar"

            android:layout_marginTop="100dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="200dp"
            android:layout_height="70dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>